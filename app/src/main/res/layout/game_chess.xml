<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    android:orientation="horizontal"
    android:background="#3A9C7C"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="491dp"
        android:padding="10dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="end">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColorLink="#FF5722"
        android:textColor="@color/black"
        android:maxLength="4"
        android:inputType="number"
        android:hint="@string/enter_minutes"
        android:fontFamily="casual"
        android:layout_toLeftOf="@+id/startTimer"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_centerVertical="false"
        android:layout_alignParentLeft="false"
        android:id="@+id/enterMinutes"/>

    <Button
        android:background="#FF5722"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_centerVertical="false"
        android:id="@+id/startTimer"
        android:text="@string/start_timer"
        android:layout_weight="50"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:layout_gravity="center_horizontal"
        android:id="@+id/countdownText"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <TextView
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:id="@+id/BPMoveList"
        android:text="@string/black_player_move_list"
        android:layout_weight="50"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:background="#ffffff"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/blackPlayerMoves"
        android:text="TextView"
        android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <TextView
        android:background="#000000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:fontFamily="casual"
        android:id="@+id/WPMoveList"
        android:text="@string/white_player_move_list"
        android:layout_weight="50"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:outlineAmbientShadowColor="@color/black"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:background="#ffffff"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/whitePlayerMoves"
        android:text="TextView" android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="bottom|end"
        android:id="@+id/buttonLayout">

    <Space
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="10"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:id="@+id/Confirm"
        android:text="@string/confirm_move"
        android:layout_weight="20"
        android:textStyle="bold"
        android:textAlignment="center" style="?android:attr/buttonBarButtonStyle"/>

    <Space
        android:layout_height="0dp"
        android:layout_width="5dp"
        android:layout_weight="10"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:id="@+id/Draw"
        android:text="@string/offer_draw"
        android:layout_weight="20"
        android:textStyle="bold"
        android:textAlignment="center" style="?android:attr/buttonBarButtonStyle"/>

    <Space
        android:layout_height="0dp"
        android:layout_width="5dp"
        android:layout_weight="10"/>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:gravity="bottom|end" android:id="@+id/buttonLayout2">

    <Space
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="10"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:id="@+id/Resign"
        android:text="@string/resign"
        android:layout_weight="20"
        android:textStyle="bold"
        android:textAlignment="center" style="?android:attr/buttonBarButtonStyle"/>

    <Space
        android:layout_height="0dp"
        android:layout_width="5dp"
        android:layout_weight="10"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:id="@+id/Pause"
        android:text="@string/pause_timer"
        android:layout_weight="20"
        android:textStyle="bold"
        android:textAlignment="center" style="?android:attr/buttonBarButtonStyle"/>

    <Space
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="10"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <edu.up.cs301.game.GameFramework.animation.AnimationSurface
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/animationSurface"
        android:layout_weight="50"/>

</LinearLayout>

</LinearLayout>